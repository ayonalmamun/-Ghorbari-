<body>
	<nav class="navbar navbar-dark navbar-expand-md py-0 fixed-top" id="mainNavbar">
			<div class="container">
				<a class="navbar-brand" href="/"><i class="fas fa-home"> ঘর-বাড়ী</i></a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navLinks">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/" class="nav-link">HOME</a>
                </li>
                <li class="nav-item">
                    <a href="/about" class="nav-link">ABOUT</a>
                </li>
            </ul>
		
		
      <ul class="nav navbar-nav navbar-right ml-auto">
        			<% if(!currentUser){ %>
						<li class="nav-item"><a href="/login" class="nav-link">LOGIN <i class="fas fa-sign-in-alt"></i> </a></li>
						<li class="nav-item"><a href="/signup" class="nav-link">SIGN UP <i class="fas fa-user-plus"></i></a></li>
					<% } else { %>
						<li class="nav-item"><a href="#" class="nav-link">LOGGED IN AS <%= currentUser.username %> <i class="fas fa-fingerprint"></i></a></li>
						<li class="nav-item"><a href="/logout" class="nav-link">LOGOUT <i class="fas fa-sign-out-alt"></i></a></li>
					<% } %>
      </ul>	
			
			
		</div>
		</div>
    </nav>
<div class="container">
	<% if(error && error.length > 0){ %>
		<div class="alert alert-danger" role="alert"><%= error %></div>
	<% } %>
		
	<% if(success && success.length > 0){ %>
		<div class="alert alert-success" role="alert"><%= success %></div>
	<% } %>
		
</div>
